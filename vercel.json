{
  "version": 2,
  "builds": [
    {
      "src": "bacteraify/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "build.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "core"
      }
    }
  ],
  "routes": [
    { 
      "src": "/media/(.*)", 
      "dest": "/media/$1" },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "bacterafiy/wsgi.py"
    }
  ],
  "rewrites": [
    {"source": "/(.*)", "destination": "/"}
  ]
}